package back1254;
import java.util.*;
public class Main {

	static Scanner in = new Scanner(System.in);
	static String S = in.nextLine();;
	static char Arr[];
	static int c;
	
	public static void main(String args[]){
	    
		
		Arr = S.toCharArray();
		
			int leftmax = -1,rightmax = -1;
			int max = -1;
			
			for ( int i = 1 ; i <= Arr.length-1 ; i ++){

					System.out.println(0+"번쨰와 "+i+"번째 콜");
					FELIN(0,i,0);
					System.out.println(c);
					if ( c != 0 ){
						int left = 0;
						int right = i;
						while ( true ){
						int savec = c;
						left ++;
						right --;
					    if ( left > right) { break; }
						FELIN(left,right,c);
						System.out.println(c +"와 "+ savec);
						
						}

					}
						
					if ( leftmax < c){ leftmax = c; } 
					c = 0;
				
			}
			System.out.println("-------------");
			for ( int s = 0 ; s <= Arr.length-2 ; s ++){

					System.out.println(s+"번쨰와 "+(Arr.length-1)+"번째 콜");
					FELIN(s,Arr.length-1,0);
					if ( rightmax < c){ rightmax = c; } 
					c = 0;
				
			}
			
			System.out.println(leftmax +" "+ rightmax);
			
			if ( leftmax >= rightmax){ max = leftmax; }
			else { max = rightmax; }
			
			if ( max == 0 ){ int length = (Arr.length * 2) - 1; } 
			else if ( max == Arr.length ){ int length = max; }
			else { int length = Arr.length + max * 2 ; }
	
		
	}
	
	public static void FELIN(int i , int j,int count){
	
		
		if( i == j ){
			count++;
			c = count;
			return;
		}
		if( Arr[i] == Arr[j] ){
			c = c + 2;
			System.out.println("같노");
			//FELIN(i++,j--,count);
			return;
		}
		if( i > j ){
			c = count;
			return;
		}
		if( Arr[i]!= Arr[j]){
			c = 0;
			return;
		}
		
		
	}
	
}
